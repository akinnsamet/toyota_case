@{
    ViewData["Title"] = "Araç Servis Kayıtları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_Sidebar")

<main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Araç Servis Kayıt Log</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="vehicleServiceTable" class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Açıklama</th>
                                        <th>Tarih</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- DataTable will populate this -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>



<div class="modal fade" id="vehicleServiceModal" tabindex="-1" aria-labelledby="vehicleServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="vehicleServiceModalLabel">Log Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="vehicleServiceForm">
                <div class="modal-body">
                    <input type="hidden" id="recordId" name="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="licensePlate" class="form-label">Id</label>
                            <input type="text" class="form-control" id="id" name="id" disabled="disabled">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="serviceDate" class="form-label">Tarih</label>
                            <input type="text" class="form-control" id="createDate" name="createDate" disabled="disabled">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-6">
                            <label for="modelName" class="form-label">Detail</label>
                            <textarea id="description" name="description" rows="15" cols="50" class="form-control" disabled="disabled"></textarea>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        let dataTable;

        $(document).ready(function() {
            initializeDataTable();
        });

        var tempRow;

        function initializeDataTable() {
            dataTable = $('#vehicleServiceTable').DataTable({
                info: true,
                retrieve: true,
                destroy: true,
                processing: true,
                serverSide: true,
                  ajax: {
                    url: '@Url.Action("GetAll", "VehicleServiceRecordLog")',
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    data: function(d) {
                            return JSON.stringify({
                                Draw: d.draw,
                                SortingPaging: {
                                    SortItem: {
                                        ColumnName: d.columns[d.order[0].column].data,
                                        ColumnOrder: d.order[0].dir === 'asc' ? 'Ascending' : 'Descending'
                                    },
                                    PageNumber: Math.floor(d.start / d.length) + 1,
                                    NumberRecords: d.length
                                },
                                SearchText: d.search.value || ''
                        });
                    }
                },
                columns: [
                    { data: 'description' },
                    {
                        data: 'createDate',
                        render: function(data) {
                            return data ? new Date(data).toLocaleDateString('tr-TR') : '';
                        }
                    },
                    {
                        data: null,
                        orderable: false,
                               render: function(data, type, row) {
                                return `
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-primary show-detail-btn"
                                            data-id="${row.id}"
                                            data-createDate="${row.createDate}"
                                            data-description="${row.description.replace(/"/g, '&quot;')}"
                                            title="Detay">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                `;
                            }
                    }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                pageLength: 10,
                lengthMenu: [[10, 25, 50, 100], [10, 25, 50, 100]],
                order: [[1, 'desc']],
                drawCallback: function(settings) {
                    const api = this.api();
                    const info = api.page.info();
                    const text = `${info.recordsDisplay} kayıttan ${info.start + 1} - ${info.end} arasındaki kayıtlar gösteriliyor`;
                    $(api.table().container()).find('.dataTables_info').text(text);
                }
            });
        }


        function refreshTable() {
            dataTable.ajax.reload();
        }

        $(document).on('click', '.show-detail-btn', function() {
            const id = $(this).data('id');
            const createDate = $(this).data('createdate');
            const description = $(this).data('description');

            $('#id').val(id);
            $('#createDate').val(createDate ? new Date(createDate).toISOString().split('T')[0] : '');
            $('#description').val(description);
            $('#vehicleServiceModal').modal('show');
        });


    </script>
}
