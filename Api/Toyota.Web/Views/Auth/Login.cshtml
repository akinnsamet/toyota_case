@model Toyota.Entities.Auth.LoginRequestEntity
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-flex align-items-center justify-content-center">
                            <img src="~/images/login_car_image.png"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Login" method="post" id="loginForm">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <img src="~/images/toyotaicon.svg" class="fa-2x me-3" alt="Phone image">
                                        <span class="h1 fw-bold mb-0">Toyota Servis Yönetimi</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Hesabınıza giriş yapın</h5>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Username" id="form2Example17" class="form-control form-control-lg" />
                                        <label class="form-label" for="Username">@Html.DisplayNameFor(m => m.Username)</label>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>


                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Password" id="form2Example27" class="form-control form-control-lg" />
                                        <label class="form-label" for="Username">@Html.DisplayNameFor(m => m.Password)</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>


                                    <div class="pt-1 mb-4">
                                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Giriş Yap</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('#loginForm').on('submit', function(e) {
                e.preventDefault();

                var form = $('#loginForm');
                var formDataAsObject = {
                    Username: form.find('input[name="Username"]').val(),
                    Password: form.find('input[name="Password"]').val()
                };
                $.ajax({
                    url: '/Auth/LoginAjax',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formDataAsObject),
                    success: function(response) {
                        if (response.result.resultCode == 0) {
                            window.location.href = '/Home/Index';
                        } else {
                            toastr.error(response.result?.resultMessage ?? "İşlem sırasında bir hata oluştu", 'Hata');
                        }
                    }
                });
            });
        });
    </script>
}
